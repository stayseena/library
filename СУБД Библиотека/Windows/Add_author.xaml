<Window x:Class="СУБД_Библиотека.Windows.Add_author"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СУБД_Библиотека.Windows"
        mc:Ignorable="d"
        Title="Add_author" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Полное имя автора: " Margin="0,20,0,0"/>
        <TextBox Text="{Binding Name}" MaxLength="100" Width="450" Margin="0,50,0,0"/>
        <Button Content="            Сохранить" Margin="0, 100,240,0" Click="Create_button_Click"/>
        <Button Content="                Назад" Margin="240,100,0,0" Click="Back_button_Click"/>
    </Grid>
</Window>
